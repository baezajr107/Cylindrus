<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="example.project.cylindris" >

    <application

        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainMenu"
            android:label="@string/title_activity_main_menu"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ScoreMenu"
            android:label="@string/title_activity_settings_menu"
            android:parentActivityName=".MainMenu"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="example.project.cylindris.MainMenu" />
        </activity>
        <activity
            android:name=".DifficultyMenu"
            android:label="@string/title_activity_difficulty_menu"
            android:parentActivityName=".MainMenu"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="example.project.cylindris.MainMenu" />
        </activity>
        <activity
            android:name=".Main_Menu"
            android:label="@string/app_name" >
        </activity>

        <uses-feature
            android:glEsVersion="0x00020000"
            android:required="true" />

        <activity
            android:name=".OGLES_Test"
            android:label="ogles test" >
        </activity>
        <activity
            android:name=".ImportTest"
            android:label="import test" >
        </activity>
        <activity
            android:name=".CubeTest"
            android:label="cube test" >
        </activity>
        <activity
            android:name=".GameEngine"
            android:label="@string/title_activity_game_engine" >
        </activity>
    </application>

</manifest>
